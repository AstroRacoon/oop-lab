class complex 
{
	
public:
	double Re, Im;
	void set() 
	{
		cout << "Действительная часть:";
		cin >> Re;
		cout << "Мнимая часть:" ;
		cin >> Im;
	}
	void get() 
	{
		cout << "Число: " << Re;
		if (Im < 0) 
		{
			cout << Im << "i" << endl;
		}
		else 
		{
			cout << "+" << Im << "i" << endl;
		}
	}
	void modul() 
	{
		cout << "Модуль:" << sqrt(Re*Re + Im * Im) << endl;
	}
	void arg()
	{
		cout << "Аргумент:" << (Im / Re) << endl;
	}
	
};
