using namespace std;

class Vector
{

public:
	int x1, y1, x2, y2;
	Vector(int x1,int y1, int x2, int y2)
	{
		this->x1 = x1;
		this->y1 = y1;
		this->x2 = x2;
		this->y2 = y2;
	}
	void set()
	{
		cout << "Введите x и y первого вектора:";
		cin >> x1 >> y1;
		cout << "Введите x и y второго вектора:";
		cin >> x2 >> y2;

	}

	void get()
	{
		cout << "Первый вектор:" << "(" << x1 << "," << y1 << ")" << endl;
		cout << "Второй вектор:" << "(" << x2 << "," << y2 << ")" << endl;
	}

	void modul()
	{
		cout << "Модуль первого вектора:" << sqrt(x1*x1 + y1 * y1) << endl;
		cout << "Модуль второго вектора:" << sqrt(x2*x2 + y2 * y2) << endl;
	}

	void sum()
	{
		cout << "Сумма:" << "(" << x1 + x2 << "," << y1 + y2 << ")" << endl;
	}

	void dif()
	{
		cout << "Разность:" << "(" << x1 - x2 << "," << y1 - y2 << ")" << endl;
	}
	~Vector() {}; 
};
