#include "pch.h"
#include <iostream>
#include<string>
#include "windows.h"

using namespace std;

class Creatures
{
protected:
	string name;
	int year;
public:
	void set()
	{
		cout << "Имя:";
		cin >> name;
		cout << "Возраст:";
		cin >> year;
	}
	void out()
	{
		cout << "Я " << name << " мне " << year << endl;
	}
	virtual void act() = 0;
};

class Animal : public Creatures
{
public:
	void act()
	{
		cout << "хожу" << endl;
	}

};
class Bird : public Creatures
{
public:
	void act()
	{
		cout << "летаю" << endl;
	}

};

class Fish : public Creatures
{
public:
	void act()
	{
		cout << "плаваю" << endl;
	}

};

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);


	Bird a;
	cout << "Птица" << endl;
	a.set();
	a.out();
	a.act();
	cout << endl;

	Fish b;
	cout << "Рыба" << endl;
	b.set();
	b.out();
	b.act();
	cout << endl;

	Animal c;
	cout << "Животное" << endl;
	c.set();
	c.out();
	c.act();

	system("pause");
	return 0;
}
