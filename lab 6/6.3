#include "pch.h"
#include <iostream>
#include<string>
#include "windows.h"

using namespace std;

class Animal
{
protected:
	string name;
	int year;
public:
	void set()
	{
		cout << "Имя:";
		cin >> name;
		cout << "Возраст:";
		cin >> year;
	}
	void out()
	{
		cout << "Меня зовут " << name << " мне " << year << endl;
	}
	virtual void act() = 0;
};
class Dog : public Animal
{
public:
	void act()
	{
		cout << "Гав" << endl;
	}

};

class Cat : public Animal
{
public:
	void act()
	{
		cout << "Мяу" << endl;
	}

};


int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	Dog a;
	cout << "Cобака" << endl;
	a.set();
	a.out();
	a.act();
	cout << endl;

	Cat b;
	cout << "Кошка" << endl;
	b.set();
	b.out();
	b.act();
	cout << endl;

	system("pause");
	return 0;
}
